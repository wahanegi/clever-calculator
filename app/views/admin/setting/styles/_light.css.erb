:root {
    --bs-light: <%= color_hex %>;
    --bs-light-rgb: <%= color_rgb %>;
}

.btn-outline-light {
    --bs-btn-color: <%= color_hex %>;
    --bs-btn-border-color: <%= color_hex %>;
    --bs-btn-hover-bg: <%= color_hex %>;
    --bs-btn-hover-border-color: <%= color_hex %>;
    --bs-btn-active-bg: <%= color_hex %>;
    --bs-btn-active-border-color: <%= color_hex %>;
    --bs-btn-disabled-color: <%= color_hex %>;
    --bs-btn-disabled-border-color: <%= color_hex %>;
