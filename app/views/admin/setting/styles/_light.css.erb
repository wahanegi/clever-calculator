.btn-light {
    --bs-btn-bg: <%= color_hex %>;
    --bs-btn-border-color: <%= color_hex %>;
    --bs-btn-disabled-bg: <%= color_hex %>;
    --bs-btn-disabled-border-color: <%= color_hex %>;
